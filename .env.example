# Environment Configuration
NODE_ENV=development
PORT=3000

# Mock Mode Configuration
MOCK_MODE=1
MOCK_EMAIL_SERVICE=1
MOCK_TTS_SERVICE=1
MOCK_ACADEMIC_APIS=1
OFFLINE_MODE=1
FIXTURES_ONLY=1

# Email Service Configuration
EMAIL_PROVIDER=resend
EMAIL_FROM="Bite Size Academic <no-reply@bsa.test>"
RESEND_API_KEY=resend_api_key_here
SENDGRID_API_KEY=sendgrid_api_key_here

# Public URLs
PUBLIC_BASE_URL=http://localhost:3000
PUBLIC_SITE_URL=http://localhost:3000

# Storage Configuration
STORAGE_DIR=./storage
ARTIFACTS_DIR=./artifacts
FIXTURES_DIR=./fixtures

# AWS Configuration (for TTS in production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Database Configuration (for future expansion)
DATABASE_URL=file:./storage/database.sqlite

# Authentication and Security
JWT_SECRET=your_jwt_secret_here_change_in_production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_in_production

# Content Generation
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# External API Keys (production)
CROSSREF_API_KEY=your_crossref_api_key_here
PUBMED_API_KEY=your_pubmed_api_key_here

# Performance and Monitoring
LOG_LEVEL=info
ENABLE_METRICS=1
ENABLE_TRACING=1

# Development Tools
ENABLE_DEBUG_LOGS=1
ENABLE_HOT_RELOAD=1
ENABLE_SWAGGER_UI=1